<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#bcbbbb"
    tools:context="id.eightstudio.danboru.pengujiansistem.Adapter.MahasiswaAdapter"
    >

    <TextView
        android:id="@+id/txt_rowNamaMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        />

    <TextView
        android:id="@+id/txt_rowNimMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nim"
        android:layout_below="@+id/txt_rowNamaMahasiswa"
        />

    <TextView
        android:id="@+id/txt_rowNilaiAkhirMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai Akhir"
        android:layout_below="@id/txt_rowNimMahasiswa"
        />

    <TextView
        android:id="@+id/txt_rowNilaiAksaraMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nilai Aksara"
        android:layout_alignParentRight="true"
        android:textSize="30sp"
        />

</RelativeLayout>
